%% mut sweep
% load('sdMutsweep.mat');
figure;
x = results(:, mutIndex);
it = results(:, itIndex);
title('Mutation vs. Time');
plot(x,it);
title('mutation');

% add a polynomial fit
y1 = results(:,itIndex);
% y1 = results(:,timeIndex);

p = polyfit(x, y1, 3);

y2 = polyval(p, x);
plot(x, y2, 'b', 'Linewidth', 2);
disp([min(x) max(x) min(y1) max(y1)])
axis([min(x) max(x) min(y1) max(y1)]);

xlabel('Standard deviation of mutation');
ylabel('Time (s)');

hold on;
plot(x, y1, 'Color','r' );
ax = gca;
ax.FontSize = 12;     % set font size for axes labels

